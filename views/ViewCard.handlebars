

    <div class="container text-center p-5">
        <!-- make sure this is in the center -->
        <h1 class="fs-1">Cards</h1>

        <!-- a container for all card that resulsted -->
       <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="d-flex flex-wrap">


                            {{#each cData}}
                            <div class="col-4">
                                <div class="card" style="border: none;">
                                    <img src="https://static.marvelsnap.pro/cards/{{card_def_image_i_d}}.webp"
                                        class="card-img" alt="Image" style="max-width: 100%">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">{{name}}</h5>
                                    </div>
                                    <!-- Button to trigger the modal with a unique data-target attribute -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#imageModal{{@index}}">
                                        Details
                                    </button>
                                </div>
                            </div>

                            <!-- Modal with a dynamic id and data-index attribute -->
                            <div class="modal fade" id="imageModal{{@index}}" data-index="{{@index}}" tabindex="-1"
                                role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
                                <!-- Modal content as you have it -->
                                <div class="modal-dialog modal-lg modal-horizontal" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <img src="https://static.marvelsnap.pro/cards/{{card_def_image_i_d}}.webp"
                                                        class="img-fluid" alt="Image">
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="col-md-6">
                                                        <h4>Overview</h4>
                                                        <ul style="list-style-type: none; padding: 0;">
                                                            <li><strong>Name:</strong> {{name}}</li>
                                                            <li><strong>Cost:</strong> {{cost}}</li>
                                                            <li><strong>Power:</strong> {{power}}</li>
                                                            <li><strong>Ability:</strong> {{ability}}</li>
                                                            <li><strong>Description:</strong> {{card_description}}</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}


                        </div>
                    </div>
                </div>
        </div>
    </div>

    <script src="./js/search.js" ></script>
    <script src="/js/generateModal.js"></script>
    
