<div class="mt-3">
    <div class="row">

        <!-- Main Content (Content on the right side) -->
        <div class="col-md-12">

            <div class="card mt-4">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://static.marvelsnap.pro/cards/DoctorOctopus.webp" class="card-img" alt="Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Featured Card</h5>
                            <p class="card-text">
                            <ul style="list-style-type: none;">
                                <li style="margin: 20px 0;">Card Name: Doctor Octopus</li>
                                <li style="margin: 20px 0;">Power: 10</li>
                                <li style="margin: 20px 0;">Cost: 5</li>
                                <li style="margin: 20px 0;">Ability: On Reveal, Move</li>
                                <li style="margin: 20px 0;">Description: Pull 4 random cards from your opponent's hand
                                    to their side of this location.</li>
                            </ul>

                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="d-flex flex-wrap">


                            {{#each cData}}
                            <div class="col-4">
                                <div class="card marvelcard" style="border: none;" data-cardcost="{{cost}}">
                                    <img src="https://static.marvelsnap.pro/cards/{{cardDefImageID}}.webp"
                                        class="card-img" alt="Image" style="max-width: 100%">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">{{name}}</h5>
                                    </div>
                                    <!-- Button to trigger the modal with a unique data-target attribute -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#imageModal{{@index}}">
                                        Details
                                    </button>
                                </div>
                            </div>

                            <!-- Modal with a dynamic id and data-index attribute -->
                            <div class="modal fade" id="imageModal{{@index}}" data-index="{{@index}}" tabindex="-1"
                                role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
                                <!-- Modal content as you have it -->
                                <div class="modal-dialog modal-lg modal-horizontal" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <img src="https://static.marvelsnap.pro/cards/{{cardDefImageID}}.webp"
                                                        class="img-fluid" alt="Image">
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="col-md-6">
                                                        <h4>Overview</h4>
                                                        <ul style="list-style-type: none; padding: 0;">
                                                            <li><strong>Name:</strong> {{name}}</li>
                                                            <li><strong>Cost:</strong> {{cost}}</li>
                                                            <li><strong>Power:</strong> {{power}}</li>
                                                            <li><strong>Ability:</strong> {{ability}}</li>
                                                            <li><strong>Description:</strong> {{cardDescription}}</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}


                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>

<script src="/js/generateModal.js"></script>